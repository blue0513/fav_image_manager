<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @fav_images.each do |fav_image| %>

      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <%= image_tag "/sample.jpg", class: "card-img-top" %>
          <div class="card-body">
            <p class="card-text">
              <%= fav_image.name %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  <%= button_to "Delete",
                   "fav_images/delete/#{fav_image.id}",
                   {method: :delete, id: fav_image.id}
                  %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
